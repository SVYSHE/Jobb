<UserControl x:Class="GUI.WPF.Views.JobbsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI.WPF.Views" xmlns:viewmodels="clr-namespace:GUI.WPF.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:JobbsViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DataGrid ItemsSource="{Binding Jobbs}" AutoGenerateColumns="False" FontSize="14" CanUserDeleteRows="False" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Name" Binding="{Binding Parameters.Name}" />
            <DataGridTextColumn Header="Jobb Type" Binding="{Binding TypeName}" IsReadOnly="True" />
            <DataGridTextColumn Header="Interval" Binding="{Binding Interval}" IsReadOnly="True" />
            <DataGridTextColumn Header="Status" Binding="{Binding Parameters.ReturnCode}" IsReadOnly="True"/>
            <DataGridTextColumn Header="Error" Binding="{Binding Parameters.Error.Message}" IsReadOnly="True"/>
        </DataGrid.Columns>
    </DataGrid>
</UserControl>
