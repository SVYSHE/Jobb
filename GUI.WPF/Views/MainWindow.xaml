<Window x:Class="GUI.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI.WPF.Views"
        xmlns:viewmodels="clr-namespace:GUI.WPF.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1400">
    <Grid>
        <StackPanel>
            <Button Content="Add New Jobb" Command="{Binding AddJobbCommand}" FontSize="14"/>
            <DataGrid ItemsSource="{Binding Jobbs}" AutoGenerateColumns="False" FontSize="14">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Parameters.Name}" />
                    <DataGridTextColumn Header="Jobb Type" Binding="{Binding TypeName}" IsReadOnly="True" />
                    <DataGridTextColumn Header="Interval" Binding="{Binding Interval}" IsReadOnly="True" />
                    <DataGridTextColumn Header="Status" Binding="{Binding Parameters.ReturnCode}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Error" Binding="{Binding Parameters.Error.Message}" IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
