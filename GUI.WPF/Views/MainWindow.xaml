<Window x:Class="GUI.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI.WPF.Views"
        xmlns:viewmodels="clr-namespace:GUI.WPF.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Content="Add New Jobb" FontSize="30" Command="{Binding JobbsViewModel.AddJobbCommand}" Grid.Column="0" Grid.Row="0"/>
        <Button Content="NotImplemented" FontSize="14" Grid.Column="0" Grid.Row="1"/>
        <Button Content="NotImplemented" FontSize="14" Grid.Column="0" Grid.Row="2"/>
        <local:JobbsView DataContext="{Binding JobbsViewModel}" Grid.Column="1" Grid.RowSpan="3"/>
    </Grid>
</Window>
